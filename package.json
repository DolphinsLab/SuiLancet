{
  "name": "sui-lancet",
  "version": "2.0.0",
  "description": "SuiLancet - Sui on-chain utility toolkit",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "bin": {
    "sui-lancet": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup --format cjs,esm --dts",
    "build:cli": "tsup src/cli/index.ts --format cjs --target node18",
    "dev": "tsup --watch",
    "dev:cli": "bun run src/cli/index.ts",
    "cli": "bun run dist/cli/index.js",
    "test": "jest",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@mysten/sui": "^1.6.0",
    "bip39": "^3.1.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5"
  }
}
